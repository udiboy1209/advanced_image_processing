  ||#1||_{l_2}
}
\newcommand{\linf}[1]{
  ||#1||_{l_\infty}
}
\newcommand{\htj}[1]{
  h_{T_{#1}}
}

\newcommand{\htc}[1]{
  h_{{#1}^c}
}

